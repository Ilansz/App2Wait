<h1 class="text-center"> <%= @challenge.name %> </h1>

<div class="container">
  <div class='mb-3'>
    <%= cl_image_tag @challenge.photo, crop: :fill, class: 'card-category challenge-card' %>
  </div>
  <div>
    <% @challenge.levels.each do |level|%>
    <div class="card-product my-2">
      <div class="card-time">
        <h6>  <%= level.time %> <br> min </h6>
      </div>
      <div class="card-product-infos">
       <h2> <%= level.description %> </h2>
     </div>
   </div>
   <% end %>

  <div class="groups d-flex">
   <%= render 'events/form' %>
   <button>+</button>
  </div>

   <%= render 'groups/form' %>

   <p> <%= link_to "back", challenges_path %> </p>
 </div>

