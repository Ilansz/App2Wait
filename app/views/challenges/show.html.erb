<div class="title">
  <h2 class="text-center"> <%= @challenge.name %> </h2>
</div>
<div class="container">
  <div class='mb-3'>
    <%= cl_image_tag @challenge.photo, crop: :fill, class: 'card-category challenge-card' %>
  </div>
  <h5 class="text-center mb-0"><ins> Challenge description:</ins></h5>
  <p class="text-center"><small>* You can edit this later</small></p>
  <div>
    <% @challenge.levels.each do |level|%>
    <div class="card-product my-2">
      <div class="card-time">
        <h6>  <%= level.time %> <br> min </h6>
      </div>
      <div class="card-product-infos">
       <h2> <%= level.description %> </h2>
     </div>
   </div>
   <% end %>
 </div>
 <div class="groups">
   <%= render 'events/form' %>
 </div>
 <p class="text-center mb-1 mt-1">Or</p>
 <div class="btn btn-outline-primary btn-block" id="toggle-form">Create a group</div>

 <%= render 'groups/form' %>
 <br>
 <%= link_to "Back to all Challenges", challenges_path, class: 'text-secondary'%>
</div>
<br>


