<% @groups = Group.all %>
<div class="mt-3">

  <%= simple_form_for(@event) do |f| %>

  <%= f.association :group, collection: @groups, label: false, as: :radio_buttons, wrapper: :vertical_collection_inline %>

  <div class="form-actions d-flex justify-content-center">
    <%= f.button :submit, value: "Pick this challenge", class: "btn btn-primary btn-block" %>
    <%= hidden_field_tag :challenge, @challenge.id %>
  </div>
  <% end %>

</div>
