<div class="mt-3" id="form-group">
<% @groups = Group.all %>

<div class="container">
  <%= simple_form_for(@event) do |f| %>

  <%= f.association :group, collection: @groups, label: false, as: :radio_buttons %>
    <div class="form-actions ">
    <%= f.button :submit, value: "Pick this challenge", class: "btn btn-primary btn-block" %>
    <%= hidden_field_tag :challenge, @challenge.id %>
  </div>
  <% end %>

</div>

</div>
