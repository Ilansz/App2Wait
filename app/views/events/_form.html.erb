<div class="container">

  <%= simple_form_for(@event) do |f| %>

    <div class="form-inputs">
      <%= f.input :name, placeholder: 'Oliver Stone' %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
    </div>

    <div class="form-actions d-flex justify-content-center">
      <%= f.button :submit, value: "Launch", class: "btn btn-primary w-50 my-2 btn-text" %>
    </div>
  <% end %>

</div>
